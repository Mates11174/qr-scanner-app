    <div class="container">
        <div class="header">
            <div class="app-icon">üì±</div>
            <h1 class="title">QR Scanner</h1>
        </div>
        
        <div class="counter">
            <div class="scan-count" id="scanCount">0</div>
            <div>Poƒçet skenov√°n√≠</div>
        </div>
        
        <button class="scan-button" id="scanButton">
            <span>üì∑</span>
            <span>Skenovat QR k√≥d</span>
        </button>
        
        <div class="video-container" id="videoContainer">
            <video id="video" autoplay playsinline></video>
            <div class="scan-overlay"></div>
            <div class="scan-instruction">
                Nami≈ôte kameru na QR k√≥d
            </div>
        </div>
        
        <div class="install-prompt">
            üí° <strong>Tip:</strong> P≈ôidejte si tuto str√°nku na plochu telefonu!<br>
            Safari ‚Üí Sd√≠let ‚Üí P≈ôidat na plochu
        </div>
        
        <div class="history" id="historySection" style="display: none;">
            <h3 class="history-title">
                üìã Historie skenov√°n√≠
                <button class="clear-button" onclick="clearHistory()">Vymazat</button>
            </h3>
            <div id="historyList"></div>
        </div>
    </div>
    
    <div class="alert" id="alert">
        <div class="alert-title" id="alertTitle">Upozornƒõn√≠!</div>
        <div id="alertMessage"></div>
        <button class="alert-button" onclick="closeAlert()">OK</button>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/qr-scanner/1.4.2/qr-scanner.umd.min.js"></script>
    <script>
        class QRScannerApp {
            constructor() {
                this.scans = JSON.parse(localStorage.getItem('qrScans') || '[]');
                this.scanner = null;
                this.isScanning = false;
                
                this.initElements();
                this.updateUI();
                this.setupEventListeners();
            }
            
            initElements() {
                this.scanButton = document.getElementById('scanButton');
                this.videoContainer = document.getElementById('videoContainer');
                this.video = document.getElementById('video');
                this.scanCount = document.getElementById('scanCount');
                this.historySection = document.getElementById('historySection');
                this.historyList = document.getElementById('historyList');
                this.alert = document.getElementById('alert');
                this.alertTitle = document.getElementById('alertTitle');
                this.alertMessage = document.getElementById('alertMessage');
            }
            
            setupEventListeners() {
                this.scanButton.addEventListener('click', () => this.toggleScanning());
                
                // P≈ôid√°n√≠ na plochu
                window.addEventListener('beforeinstallprompt', (e) => {
                    e.preventDefault();
                    this.deferredPrompt = e;
                });
            }
            
            async toggleScanning() {
                if (this.isScanning) {
                    this.stopScanning();
                } else {
                    await this.startScanning();
                }
            }
            
            async startScanning() {
                try {
                    this.scanButton.textContent = 'Zastavit skenov√°n√≠';
                    this.scanButton.disabled = true;
                    
                    // Po≈æ√°dat o p≈ô√≠stup ke kame≈ôe
                    const stream = await navigator.mediaDevices.getUserMedia({ 
                        video: { facingMode: 'environment' } 
                    });
                    
                    this.video.srcObject = stream;
                    this.videoContainer.classList.add('active');
                    
                    // Inicializovat QR scanner
                    this.scanner = new QrScanner(
                        this.video,
                        (result) => this.onQRScanned(result),
                        {
                            highlightScanRegion: true,
                            highlightCodeOutline: true,
                        }
                    );
                    
                    await this.scanner.start();
                    this.isScanning = true;
                    this.scanButton.disabled = false;
                    
                } catch (error) {
                    console.error('Chyba p≈ôi spu≈°tƒõn√≠ kamery:', error);
                    this.showAlert('Chyba', 'Nepoda≈ôilo se spustit kameru. Zkontrolujte opr√°vnƒõn√≠.');
                    this.scanButton.textContent = 'üì∑ Skenovat QR k√≥d';
                    this.scanButton.disabled = false;
                }
            }
            
            stopScanning() {
                if (this.scanner) {
                    this.scanner.stop();
                    this.scanner.destroy();
                    this.scanner = null;
                }
                
                if (this.video.srcObject) {
                    this.video.srcObject.getTracks().forEach(track => track.stop());
                }
                
                this.videoContainer.classList.remove('active');
                this.scanButton.innerHTML = '<span>üì∑</span><span>Skenovat QR k√≥d</span>';
                this.isScanning = false;
            }
            
            onQRScanned(result) {
                // Vibrace (pokud je podporov√°na)
                if (navigator.vibrate) {
                    navigator.vibrate(200);
                }
                
                // Ulo≈æit skenov√°n√≠
                const scan = {
                    id: Date.now(),
                    code: result.data,
                    date: new Date().toISOString()
                };
                
                this.scans.unshift(scan);
                localStorage.setItem('qrScans', JSON.stringify(this.scans));
                
                this.stopScanning();
                this.updateUI();
                
                // Zkontrolovat 6 skenov√°n√≠
                if (this.scans.length >= 6 && this.scans.length % 6 === 0) {
                    this.showSixScansAlert();
                }
                
                // Zobrazit √∫spƒõch
                this.showAlert(
                    '√öspƒõch! ‚úÖ', 
                    `Naskenov√°n k√≥d: ${result.data.substring(0, 50)}${result.data.length > 50 ? '...' : ''}`
                );
            }
            
            updateUI() {
                this.scanCount.textContent = this.scans.length;
                
                if (this.scans.length > 0) {
                    this.historySection.style.display = 'block';
                    this.renderHistory();
                }
            }
            
            renderHistory() {
                this.historyList.innerHTML = this.scans.slice(0, 10).map(scan => `
                    <div class="scan-item">
                        <div class="scan-code">${scan.code}</div>
                        <div class="scan-date">${this.formatDate(scan.date)}</div>
                    </div>
                `).join('');
            }
            
            formatDate(dateString) {
                const date = new Date(dateString);
                return date.toLocaleString('cs-CZ', {
                    day: '2-digit',
                    month: '2-digit',
                    year: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });
            }
            
            showSixScansAlert() {
                this.showAlert('üéâ Gratulace!', 'Bylo provedeno ji≈æ 6 skenov√°n√≠!');
                
                // Push notifikace (pokud je podporov√°na)
                if ('Notification' in window && Notification.permission === 'granted') {
                    new Notification('QR Scanner', {
                        body: 'Bylo provedeno ji≈æ 6 skenov√°n√≠! üéâ',
                        icon: '/apple-touch-icon.png'
                    });
                }
            }
            
            showAlert(title, message) {
                this.alertTitle.textContent = title;
                this.alertMessage.textContent = message;
                this.alert.classList.add('show');
            }
            
            closeAlert() {
                this.alert.classList.remove('show');
            }
            
            clearHistory() {
                if (confirm('Opravdu chcete vymazat v≈°echna skenov√°n√≠?')) {
                    this.scans = [];
                    localStorage.removeItem('qrScans');
                    this.updateUI();
                    this.historySection.style.display = 'none';
                }
            }
        }
        
        // Glob√°ln√≠ funkce
        function closeAlert() {
            app.closeAlert();
        }
        
        function clearHistory() {
            app.clearHistory();
        }
        
        // Spustit aplikaci
        let app;
        document.addEventListener('DOMContentLoaded', () => {
            app = new QRScannerApp();
            
            // Po≈æ√°dat o notifikace
            if ('Notification' in window && Notification.permission === 'default') {
                Notification.requestPermission();
            }
        });
        
        // Service Worker pro offline funkƒçnost
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('data:text/javascript;base64,c2VsZi5hZGRFdmVudExpc3RlbmVyKCdpbnN0YWxsJywgZnVuY3Rpb24oZXZlbnQpIHsKICBldmVudC53YWl0VW50aWwoc2VsZi5za2lwV2FpdGluZygpKTsKfSk7');
        }
    </script>
